<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.osivia.demo</groupId>
    <artifactId>osivia-demo-parent</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Demonstrateur OSIVIA - Parent</name>


    <properties>
        <osivia-portal.version>3.1.0-RC10</osivia-portal.version>
        <toutatice-cms.version>3.1.0-RC10</toutatice-cms.version>
        <nuxeo-automation-client.version>5.6.0-HF20</nuxeo-automation-client.version>
        <toutatice-faq.version>3.1-RC3</toutatice-faq.version>
        <osivia-services-wiki.version>1.1-RC10</osivia-services-wiki.version>
	<osivia-services-forum.version>1.0-RC1</osivia-services-forum.version>
        <osivia-services-contact.version>1.0-RC3</osivia-services-contact.version>
        <fichepersonne.version>2.0.2.osivia-RC2</fichepersonne.version>
        <osivia-services-java-melody-integration.version>1.0-RC2</osivia-services-java-melody-integration.version>  
    </properties>


    <modules>
        <module>osivia-demo-attributes-bundles-customizer</module>
        <module>osivia-demo-charte</module>
        <module>osivia-demo-charte-sitesweb</module>
        <module>osivia-demo-cms-nuxeo-web</module>
        <module>osivia-demo-portlets-utils</module>
        <module>osivia-demo-regions-customizer</module>
        <module>osivia-demo-test-cms</module>
        <module>osivia-demo-distribution</module>
    </modules>


    <prerequisites>
        <maven>2.0.9</maven>
    </prerequisites>


    <dependencyManagement>
        <dependencies>

            <!-- OSIVIA portal -->

            <dependency>
                <groupId>org.osivia.portal</groupId>
                <artifactId>osivia-portal-dependencies</artifactId>
                <version>${osivia-portal.version}</version>
                <scope>provided</scope>
            </dependency>

            <dependency>
                <groupId>org.osivia.portal</groupId>
                <artifactId>osivia-portal-dependencies-test</artifactId>
                <version>${osivia-portal.version}</version>
                <scope>test</scope>
            </dependency>


            <!-- Toutatice CMS -->

            <dependency>
                <groupId>toutatice-portail.cms</groupId>
                <artifactId>toutatice-portail-cms-nuxeo-api</artifactId>
                <version>${toutatice-cms.version}</version>
                <scope>provided</scope>
            </dependency>

            <dependency>
                <groupId>toutatice-portail.cms</groupId>
                <artifactId>toutatice-portail-cms-nuxeo-shared-lib</artifactId>
                <version>${toutatice-cms.version}</version>
                <scope>provided</scope>
            </dependency>

            <dependency>
                <groupId>toutatice-portail.cms</groupId>
                <artifactId>toutatice-portail-cms-nuxeo-web</artifactId>
                <version>${toutatice-cms.version}</version>
                <type>war</type>
                <scope>compile</scope>
            </dependency>

            <dependency>
                <groupId>toutatice-portail.cms</groupId>
                <artifactId>toutatice-portail-cms-nuxeo-web</artifactId>
                <classifier>classes</classifier>
                <version>${toutatice-cms.version}</version>
            </dependency>


            <!-- Nuxeo -->

            <dependency>
                <groupId>org.nuxeo.ecm.automation</groupId>
                <artifactId>nuxeo-automation-client</artifactId>
                <version>${nuxeo-automation-client.version}</version>
                <scope>provided</scope>
            </dependency>

        </dependencies>
    </dependencyManagement>


    <dependencies>

        <!-- OSIVIA portal -->

        <dependency>
            <groupId>org.osivia.portal</groupId>
            <artifactId>osivia-portal-dependencies</artifactId>
        </dependency>

        <dependency>
            <groupId>org.osivia.portal</groupId>
            <artifactId>osivia-portal-dependencies-test</artifactId>
        </dependency>

    </dependencies>


    <build>
        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <encoding>UTF-8</encoding>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <configuration>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.3</version>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.2.1</version>
                <configuration>
                    <tagBase>http://www.osivia.org/repos/osivia-demo/tags</tagBase>
                    <releaseProfiles>unpack,pack</releaseProfiles>
                    <preparationGoals>clean install</preparationGoals>
                    <goals>deploy</goals>
                </configuration>
            </plugin>

        </plugins>
    </build>


    <scm>
        <developerConnection>scm:svn:http://www.osivia.org/repos/osivia-demo/trunk/osivia-demo-portal</developerConnection>
    </scm>


    <distributionManagement>
        <repository>
            <id>osivia-releases</id>
            <url>http://www.osivia.org/nexus/content/repositories/osivia-releases</url>
        </repository>
        <snapshotRepository>
            <id>osivia-snapshots</id>
            <url>http://www.osivia.org/nexus/content/repositories/osivia-snapshots</url>
        </snapshotRepository>
    </distributionManagement>

    <profiles>
        <profile>
            <id>jenkins</id>
            <properties>
                <osivia-portal.version>3.1.0-RC9</osivia-portal.version>
                <toutatice-cms.version>3.1.0-RC9</toutatice-cms.version>
            </properties>
        </profile>

        <profile>
            <id>portal-snapshots</id>
            <properties>
            
            </properties>
        </profile>
    </profiles>
</project>
