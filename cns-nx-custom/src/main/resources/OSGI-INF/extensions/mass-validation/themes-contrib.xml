            <view id="/pv_mass_validation/mass_validation.xhtml">
                <theme>galaxy/popup</theme>
            </view>
            <view id="/pv_mass_validation/mass_validation_choose_docs.xhtml">
                <theme>galaxy/popup</theme>
            </view>            
            <view id="/pv_mass_validation/mass_validation_2.xhtml">
                <theme>galaxy/popup</theme>
            </view> 
            <view id="/pv_mass_validation/mass_validation_3.xhtml">
